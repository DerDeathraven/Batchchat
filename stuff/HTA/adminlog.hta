<html>
  <head>
    <title>TEST</title>
    <hta:application scroll="no" windowState="normal">
    <link rel="stylesheet" href="view.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
  </head>
  <script language="VBScript">
  
  sub Window_onLoad()
  set oFSO=CreateObject("Scripting.FileSystemObject")
  set oFile=oFSO.OpenTextFile("adminlog",1)
  text=oFile.ReadAll
  document.all.ScriptArea.value=text
  oFile.Close
  end sub
  
  </script>
  <body >
    <textarea name="ScriptArea" rows=20 cols=70 id="script"></textarea><p>
      <button onclick="Window_onLoad()" id="press">refresh</button>
      <script language="JavaScript">
      window.resizeTo(500, 500);
      
      var div = document.getElementById("script")
      var my = setInterval(function() {document.getElementById('press').click()},100)
      var scroll = setInterval( function scrollToBottom(){
      div.scrollTop = div.scrollHeight - div.clientHeight
      } , 200);
      
      </script>
    </body>
  </html>